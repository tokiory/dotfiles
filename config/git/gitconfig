[merge]
  conflictstyle = diff3
  tool = nvimdiff

[diff]
  colorMoved = default
	tool = nvimdiff

[user]
	name = <YOUR_NAME>
	email = <YOUT_EMAIL>

[push]
	autoSetupRemote = true

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

[rerere]
	enabled = true

[mergetool]
	keepBackup = false
